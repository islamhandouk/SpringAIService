<settings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/SETTINGS/1.2.0"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.2.0
          https://maven.apache.org/xsd/settings-1.2.0.xsd">
    <mirrors>
        <mirror>
            <id>maven-public</id>
            <name>Kinsale Cloud Nexus Maven Central Mirror</name>
            <url>https://nexus.itp.kinsale.cloud/repository/maven-public/</url>
            <mirrorOf>central,!kinsale-maven-*,!legacy-nexus,!node-dist,!knsl-*</mirrorOf>
        </mirror>
    </mirrors>
    <servers>
        <server>
            <id>maven-public</id>
            <username>${env.DEPLOY_USERNAME}</username>
            <password>${env.DEPLOY_PASSWORD}</password>
        </server>
        <server>
            <id>kinsale-maven-snapshots</id>
            <username>${env.DEPLOY_USERNAME}</username>
            <password>${env.DEPLOY_PASSWORD}</password>
        </server>
        <server>
            <id>kinsale-maven-releases</id>
            <username>${env.DEPLOY_USERNAME}</username>
            <password>${env.DEPLOY_PASSWORD}</password>
        </server>
        <server>
            <id>node-dist</id>
            <username>${env.DEPLOY_USERNAME}</username>
            <password>${env.DEPLOY_PASSWORD}</password>
        </server>
    </servers>
</settings>
